@if (activity is not null)
{
		<div class="col-2">
			<HxIcon Icon="icon"></HxIcon>
		</div>
		<div class="col">
			<span>@activity.Name</span>
		</div>
}
@code {
	[EditorRequired]
	[Parameter]
	public IActivity_Record? activity { get; set; }
	private IconBase icon = BootstrapIcon.CalendarEvent;

}
