@if (ware is not null)
{
		<div class="col-2">
			<HxIcon Icon="icon"></HxIcon>
		</div>
		<div class="col">
			<span>@ware.Name</span>
		</div>
		<div class="col-2" style="color:grey; text-align:right;">
			<span>@ware.Stock</span>
		</div>
}
@code {
	[EditorRequired]
	[Parameter]
	public IWare_Record? ware { get; set; }
	private IconBase icon = BootstrapIcon.Cart;

}
