<div class="card">
    <div class="card-header">
        <h4>@header</h4>
    </div>
    <div class="card-body">
        
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputLogin">Login</label>
              <input type="text" class="form-control" id="inputLogin" placeholder="Login" @bind="@user.UserLogin">
            </div>
            <div class="form-group col-md-6">
              <label for="inputName">Full name</label>
              <input type="text" class="form-control" id="inputName" placeholder="Full name" @bind="@user.UserName">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Email" @bind="@user.Email">
          </div>
          <div class="form-group">
            <label for="inputPhone">Phone number</label>
            <input type="tel" class="form-control" id="inputPhone" placeholder="Phone number" @bind="@user.PhoneNumber">
          </div>
          <div class="form-group">
            <label for="inputLicenseNumber">License number</label>
            <input type="number" class="form-control" id="inputLicenseNumber" @bind="@user.LicenseNumber" disabled>
          </div>
            @if(Type == FormEnum.Edit)
            {
                <button type="buttona" class="btn btn-primary" @onclick="Delete">Delete</button>
                <button type="button" class="btn btn-primary" @onclick="Update">Update</button>
            }
            else if(Type == FormEnum.Insert)
            {
                <button type="button" class="btn btn-primary" @onclick="Insert">Insert new</button>
            }
        </form>
    </div>
</div>
@code {
    public enum FormEnum
    {
        Edit,Insert
    }
    [Parameter]
    public User? user { get; set; }
    [Parameter]
    public FormEnum Type { get; set; }
    public string header { 
        get 
        {
            if (Type == FormEnum.Edit) return "Editing of record";
            else if (Type == FormEnum.Insert) return "Add new record";
            return "Unknown operation";
        }
    }
    private void Update()
    {
   
    }
    private void Delete()
    {
        
    }
    private void Insert()
    {

    }

}
